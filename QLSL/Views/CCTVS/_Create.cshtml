@model QLSL.Models.CCTVStatus
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="MyModalTitle">Báo lỗi CAM</h4>
</div>
@using (Html.BeginForm(null, null, FormMethod.Post, new {id = "Create"}))
{
    @Html.AntiForgeryToken()
    <div class="modal-body row">
        @Html.ValidationSummary(false, "", new {@class = "text-danger"})
        @Html.Hidden("OperatorName", User.Identity.Name)
        <div class="col-md-12">
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    @Html.TextBoxFor(model => model.DateOccur, "{0:dd-MM-yyyy HH:mm}", new {@class = "form-control", type = "text", id = "datetimepicker"})
                </div>
            </div>
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-camera"></span>
                    </span>
                    @Html.DropDownList("CCTVID", null, new {@class = "form-control chosen-select", data_live_search = "true", multiple = "true", id = "CCTVID", data_width = "auto" })
                 
                  
                </div>
            </div>

            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-alert"></span>
                    </span>
                    @Html.DropDownListFor(model => model.CCTVErrorID, ViewBag.CCTVErrorID as SelectList, new {@class = "form-control"})
                </div>
            </div>


            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-exclamation-sign"></span>
                    </span>
                    @Html.TextAreaFor(model => model.Details, 2, 0, new {@class = "form-control", placeholder = "Chi tiết", type = "text"})
                </div>

            </div>
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span>
                    </span>

                    @Html.TextAreaFor(model => model.ContactName, 3, 0, new {@class = "form-control", placeholder = "Liên hệ", type = "text"})
                </div>

            </div>

        </div>


    </div>
    <div class="modal-footer">
        <span class="pull-right"><i>NV: @User.Identity.Name</i></span>
        <button type="submit" class="btn btn-success pull-left" name="btnConfirm" value="Save" id="btnSubmit">Lưu</button>
    </div>
}

<script>
    $(document)
        .ready(function() {
            $('#MyModal').on('shown.bs.modal', function () {
                $('.chosen-select', this).chosen();
            });
           
        });

</script>
<script type="text/javascript">
    $(function() {
        $('#datetimepicker')
            .datetimepicker({
                defaultDate: new Date(),
                locale: 'vi',
                format: 'DD-MM-YYYY HH:mm'
            });

    });
</script>
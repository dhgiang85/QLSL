@if (Request.IsAuthenticated)
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle color-head" data-toggle="dropdown">
                @User.Identity.Name
                <b class="caret"></b>

            </a>
            <ul class="dropdown-menu ">

                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                { 
                    @Html.AntiForgeryToken()
                    <li>
                       
                        <a href="javascript:document.getElementById('logoutForm').submit()" style="color: #337ab7; text-decoration: none;margin-left :20px">Đăng xuất</a>
                    </li>
                }

                <li>@Html.ActionLink("Đổi Pass", "ChangePassword", "Manage", null, new {title = "Manage", style = "color:#337ab7;text-decoration:none"})</li>
              
            </ul>
        </li>

    </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right ">
        <li>@*@Html.ActionLink("Đăng ký", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class="color-head" })*@</li>
        <li>@Html.ActionLink("Đăng Nhập", "Login", "Account", null, new {id = "loginLink", @class = "color-head"})</li>


    </ul>
}
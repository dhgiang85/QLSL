@using QLSL.ViewModels
@model QLSL.Models.CCTV
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="MyModalTitle">@Model.Name</h4>
</div>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Edit" }))
{
    @Html.AntiForgeryToken()


    <div class="modal-body row">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="col-md-6">
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        Mã tiền điện
                    </span>
                    @Html.TextBoxFor(model => model.MTD, new { @class = "form-control", type = "text" })
                </div>
            </div>



        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        Mã đường truyền
                    </span>
                    @Html.TextBoxFor(model => model.MDT, new { @class = "form-control", type = "text" })
                </div>
            </div>


        </div>

    </div>
    <div class="modal-footer">

        <button type="submit" class="btn btn-success pull-left" name="btnConfirm" value="Save" id="btnSubmit">Lưu</button>
    </div>
}
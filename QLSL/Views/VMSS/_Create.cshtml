@model QLSL.Models.VMSHistoryStatus


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="MyModalTitle">Báo lỗi VMS</h4>
</div>


@using (Html.BeginForm(null, null, FormMethod.Post, new {id = "Create"}))
{
    <div class="modal-body row">
        @Html.ValidationSummary(false, "", new {@class = "text-danger"})
        <div class="col-md-6">
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-play-circle"></span>
                        </span>
                    @Html.DropDownListFor(model => model.VMSID, ViewBag.VMSID as SelectList, new {@class = "form-control chosen-select", data_live_search = "true"})
                </div>

            </div>
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-alert"></span>
                        </span>
                    @Html.DropDownListFor(model => model.VMSStatusID, ViewBag.VMSStatusID as SelectList, new {@class = "form-control"})
                </div>

            </div>

            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                            <span class="glyphicon glyphicon-exclamation-sign"></span>
                        </span>
                    @Html.TextAreaFor(model => model.Details, 3, 0, new {@class = "form-control", placeholder = "Chi tiết", type = "text"})
                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    @Html.TextBoxFor(model => model.DateOccur, "{0:dd-MM-yyyy HH:mm}", new {@class = "form-control", type = "text", id = "datetimepicker"})
                </div>

            </div>
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                        </span>
                    @Html.TextBoxFor(model => model.OperatorName, new {@class = "form-control", type = "text", placeholder = "Người vận hành", Value = User.Identity.Name, @readonly = true})
                </div>

            </div>


            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                            <span class="glyphicon glyphicon-list-alt"></span>
                        </span>
                    @Html.TextAreaFor(model => model.ContactName, 3, 0, new {@class = "form-control", placeholder = "Người liên hệ", type = "text"})
                </div>

            </div>


        </div>
        <div class="col-md-12">
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                            <span class="glyphicon glyphicon-list-alt"></span>
                        </span>
                    @Html.TextAreaFor(model => model.Note, 3, 0, new {@class = "form-control", placeholder = "Ghi chú", type = "text"})
                </div>


            </div>
        </div>


    </div>
    <div class="modal-footer">
        @*<input type="submit" class="btn btn-primary" value="Save" id="btnSubmit"/>*@
        @*<button type="button" class="btn" data-dismiss="modal">Cancel</button>*@
        <button type="submit" class="btn btn-success pull-left" name="btnConfirm" value="Save" id="btnSubmit">Lưu</button>
    </div>
}

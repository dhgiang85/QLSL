@model QLSL.Models.TunnelError
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="MyModalTitle">Báo lỗi</h4>
</div>
@using (Html.BeginForm(null, null, FormMethod.Post, new {id = "Create"}))
{
    @Html.AntiForgeryToken()
    <div class="modal-body row">
        @Html.ValidationSummary(false, "", new {@class = "text-danger"})
        @Html.Hidden("OperatorName", User.Identity.Name)
        <div class="col-md-12">
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    @Html.TextBoxFor(model => model.DateCreate, "{0:dd-MM-yyyy HH:mm}", new { @class = "form-control", type = "text", id = "datetimepicker1" })
                </div>
            </div>
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                    </span>
                    @Html.TextAreaFor(model => model.Details, 2, 0, new { @class = "form-control", placeholder = "Nội dung sự cố", type = "text" })
                </div>

            </div>

            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                 
                        @Html.TextBoxFor(model => model.DateOccur, "{0:dd-MM-yyyy HH:mm}", new { @class = "form-control", type = "text", id = "datetimepicker2" })
                 
                    
                </div>
            </div>



            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-user"></span>
                    </span>

                    @Html.TextAreaFor(model => model.ContactName, 3, 0, new { @class = "form-control", placeholder = "người tiếp nhận", type = "text" })
                </div>

            </div>
 
            <div class="form-group">
                <div class='input-group'>
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                    </span>
                    @Html.TextAreaFor(model => model.Note, 2, 0, new { @class = "form-control", placeholder = "Chi tiết", type = "text" })
                </div>

            </div>
        </div>


    </div>
    <div class="modal-footer">
        <span class="pull-right"><i>NV: @User.Identity.Name</i></span>
        <button type="submit" class="btn btn-success pull-left" name="btnConfirm" value="Save" id="btnSubmit">Lưu</button>
    </div>
}


<script type="text/javascript">
    $(function() {
        $('#datetimepicker1,#datetimepicker2')
            .datetimepicker({
                defaultDate: new Date(),
                locale: 'vi',
                format: 'DD-MM-YYYY HH:mm'
            });

    });
</script>